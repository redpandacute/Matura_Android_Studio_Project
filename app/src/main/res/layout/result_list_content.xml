<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/listelementborder">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/result_profilepicture_imageview"
            android:layout_width="@dimen/profilepicture_list_size"
            android:layout_height="@dimen/profilepicture_list_size"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/result_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/result_profilepicture_imageview"
            app:layout_constraintTop_toTopOf="@+id/result_profilepicture_imageview" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="@dimen/medal_search_size"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/result_profilepicture_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/result_profilepicture_imageview">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/result_spanishmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/es_medal" />

                <ImageView
                    android:id="@+id/result_frenchmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/fr_medal" />

                <ImageView
                    android:id="@+id/result_englishmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/en_medal" />

                <ImageView
                    android:id="@+id/result_germanmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/de_medal" />

                <ImageView
                    android:id="@+id/result_musicmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/mu_medal" />

                <ImageView
                    android:id="@+id/result_biologymedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/bi_medal" />

                <ImageView
                    android:id="@+id/result_chemistrymedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ch_medal" />

                <ImageView
                    android:id="@+id/result_physicsmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ps_medal" />

                <ImageView
                    android:id="@+id/result_mathsmedal_imageview"
                    android:layout_width="@dimen/medal_search_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ma_medal" />
            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/result_school_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/result_name_textview"
            app:layout_constraintTop_toBottomOf="@+id/result_name_textview" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>